{% extends "base.html.twig" %}

{% block title %}{{ Translator.tr('common-error-An error occurred') }}{% endblock %}

{% block body %}
    <div class="Offline-customBackground {% if bg %}me-bg-custom{% endif %}"></div>
    <div class="OfflineCard">
        <div class="OfflineCard-content">
            <img class="OfflineCard-logo" src="{{ src_logo }}"/>
            <div class="OfflineCard-illus">
                {{ include('pictures/500.svg') }}
            </div>
            <div class="OfflineCard-text">
                <div class="OfflineCard-catchPhrase">
                    {{ Translator.tr('common-error-An error occurred') }}
                </div>
                <div class="OfflineCard-desc">
                    {{ Translator.tr('common-An internal error occured') }}
                    <br/>
                    {{ Translator.tr('common-Try again later') }}
                </div>
            </div>
            <div class="OfflineCard-action">
                <a class="OfflineCard-primaryButton me-primary button" href="{{ external_url }}">
                    {{ Translator.tr('common-Back to main page') }}
                </a>
            </div>
        </div>
    </div>
{% endblock %}
