{
  "name": "mediboard",
  "version": "0.5.0",
  "private": true,
  "description": "Plateforme Open Source pour les Mï¿½tiers de la Santï¿½",
  "scripts": {
    "build": "vue-cli-service build",
    "build:dev": "vue-cli-service build --watch --mode=development",
    "build:status": "VUE_CLI_SERVICE_CONFIG_PATH=./status/vue/vue.config.js vue-cli-service build",
    "build:status:dev": "VUE_CLI_SERVICE_CONFIG_PATH=./status/vue/vue.config.js vue-cli-service build --watch --mode=development",
    "test:unit": "vue-cli-service test:unit --silent",
    "test:dev": "vue-cli-service test:unit --watch --verbose true",
    "test:coverage": "vue-cli-service test:unit --ci --collect-coverage --no-cache --silent --reporters=default --testResultsProcessor=\"jest-junit\"",
    "test:clear": "vue-cli-service test:unit --clear-cache",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@vue/composition-api": "^1.6.0",
    "axios": "^0.26.1",
    "glob": "^8.0.1",
    "lodash": "^4.17.21",
    "oxify": "^1.12.9",
    "pinia": "^2.0.28",
    "vue": "^2.6.14",
    "vue-class-component": "^7.2.3",
    "vue-property-decorator": "^9.1.2",
    "vuedraggable": "^2.24.3",
    "vuetify": "^2.6.12",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.16.11",
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/vue-fontawesome": "^2.0.6",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.182",
    "@types/node": "^17.0.25",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-plugin-unit-jest": "~5.0.0",
    "@vue/cli-plugin-vuex": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-standard": "^6.1.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@vue/test-utils": "^1.1.3",
    "@vue/vue2-jest": "^27.0.0-alpha.4",
    "babel-loader": "^8.2.5",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-vue": "^8.7.1",
    "html-loader": "^3.1.0",
    "jest-junit": "^13.2.0",
    "newman": "^5.3.0",
    "newman-reporter-htmlextra": "^1.22.11",
    "newman-reporter-json-summary": "^1.0.14",
    "postman-combine-collections": "^1.1.2",
    "sass": "^1.50.1",
    "sass-loader": "^12.0.0",
    "ts-jest": "^27.1.4",
    "typescript": "~4.5.5",
    "vue-cli-plugin-vuetify": "~2.4.8",
    "vue-i18n": "^8.27.1",
    "vue-jest": "^3.0.7",
    "vue-loader": "^15.8.3",
    "vue-template-compiler": "^2.6.14",
    "vuetify-loader": "^1.7.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/standard",
      "@vue/typescript/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "quotes": [
        2,
        "double",
        "avoid-escape"
      ],
      "@typescript-eslint/ban-types": [
        "error",
        {
          "extendDefaults": true,
          "types": {
            "{}": false,
            "Object": false,
            "object": false,
            "Function": false
          }
        }
      ],
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-empty-function": "warn",
      "indent": [
        1,
        4
      ],
      "vue/multi-word-component-names": [
        "error",
        {
          "ignores": [
            "Appbar"
          ]
        }
      ],
      "vue/valid-v-slot": [
        "error",
        {
          "allowModifiers": true
        }
      ],
      "vue/no-parsing-error": [
        "error",
        {
          "control-character-reference": false
        }
      ],
      "brace-style": [
        2,
        "stroustrup",
        {
          "allowSingleLine": true
        }
      ],
      "max-len": [
        "off",
        {
          "code": 120
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 1 year"
  ],
  "jest-junit": {
    "outputFile": "./tmp/jest_junit.xml"
  }
}
